-title @post.title
-authenticated_only do
  .actions= link_to "Edit", edit_post_path(@post)

  #main-post
    .post-title
      %h2= @post.title
    -if @post.published
      .post-date Published #{time_ago_in_words(@post.published_at)} ago
    .post-body= find_and_preserve @post.cached_body_html
    .tags Tagged as: #{@post.tag_list.join(', ')}

-if @post.published
  = disqus_comments
